                Grid.Row="0"
                Grid.RowSpan="2"
                Background="#3253F1"
                CornerRadius="10 0 10 10">
                <Border.Effect>
                    <DropShadowEffect
                        BlurRadius="20"
                        Opacity="0.4"
                        ShadowDepth="1" />
                </Border.Effect>

                <Grid>
                    <StackPanel>

                        <Button
